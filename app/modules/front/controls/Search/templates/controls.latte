<div class="b-search-filter buttons clearfix">
	<div class="btn-group filtering" role="group">
		<a data-tooltip="top" title="Sort by popularity" n:class="$control->by === 'popularity' ? active, 'b-search-filter__button'"
		   n:href="this, by => popularity"><span
				class="mega-octicon octicon-star"></span></a>
		<a data-tooltip="top" title="Sort by last update" n:class="$control->by === 'push' ? active, 'b-search-filter__button'" n:href="this, by => push"><span
				class="mega-octicon octicon-clock"></span></a>
	</div>
</div>
